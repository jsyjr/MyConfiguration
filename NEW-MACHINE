#!/bin/dash

# Install a bunch of dependencies
#
sudo apt-get install \
  autoconf \
  automake \
  autotools-dev \
  bison \
  bsd-mailx \
  bzr \
  ccache \
  clang \
  curl \
  doxygen-latex \
  emacs \
  flex \
  fonts-dejavu \
  git \
  global \
  gparted \
  graphviz \
  libXpm-dev \
  libdbus-1-dev \
  libgconf2-dev \
  libgif-dev \
  libgnutls-dev \
  libgpm-dev \
  libgtk2.0-dev \
  libjna-java \
  libjpeg-dev \
  libm17n-dev \
  libmagick++-dev \
  libotf-dev \
  librsvg2-dev \
  libtiff5-dev \
  libtinfo-dev \
  libx11-dev \
  libxml2-dev \
  llvm \
  mercurial \
  network-manager-openconnect-gnome \
  texinfo \
  texlive-fonts-extra \
  unison-all-gtk \



# Download my configuration and install it in my home directory
#
cd ~
git clone https://github.com/jsyjr/MyConfiguration.git
mv ~/MyConfiguration/{*,.[a-z]*} ~
rm -r ~/MyConfiguration ~/Documents ~/Music ~/Public ~/Templates ~/Videos ~/examples.desktop

# Install the Dina bitmapped font
#
sudo mkdir -p /usr/local/share/fonts/dina
sudo cp -r ~/.dinafont/dina /usr/local/share/fonts/dina
cd /etc/fonts/conf.d
sudo rm 70-no-bitmaps.conf
sudo ln -s ../conf.avail/70-yes-bitmaps.conf .

cd /tmp
wget http://sourceforge.net/projects/sourcecodepro.adobe/files/SourceCodePro_FontsOnly-1.017.zip
unzip SourceCodePro_FontsOnly-1.017.zip
sudo mkdir -p /usr/local/share/fonts/SourceCodePro
sudo cp /tmp/SourceCodePro_FontsOnly-1.017/OTF/* /usr/local/share/fonts/SourceCodePro
rm -rf /tmp/SourceCodePro*

sudo dpkg-reconfigure fontconfig-config
sudo dpkg-reconfigure fontconfig
sudo fc-cache
fc-list | grep Dina
fc-list | grep Source


# Create a directory for projects to be cloned
#
mkdir ~/repos

# Download and build suckless st (st-light, st-dark)
#
cd ~/repos
git clone http://git.suckless.org/st
cd st
~/bin/rebuild-st

# Download and build emacs
#
cd ~/repos
git clone git://git.savannah.gnu.org/emacs.git
cd emacs
./autogen.sh
~/bin/rebuild-emacs

# Download and build doxygen
#
cd ~/repos
git clone https://github.com/doxygen/doxygen.git
cd doxygen
~/bin/rebuild-doxygen
make -j8
# make install


cat >/tmp/fstab <<EOF
# /etc/fstab: static file system information.
#
# Use 'blkid' to print the universally unique identifier for a
# device; this may be used with UUID= as a more robust way to name devices
# that works even if disks are added and removed. See fstab(5).
#
# <file system> <mount point>   <type>  <options>     <dump>  <pass>
#
# /dev/sda
#
# /boot was on /dev/sda1 during installation
UUID=3f89a355-e048-41a2-851c-4f8bf93656b2 /boot       ext4    relatime,nodiratime          0 2
# /var was on /dev/sda2 during installation
UUID=ca8cd480-6274-4516-ba47-3ad386d88378 /var        ext4    relatime,nodiratime          0 2
# swap was on /dev/sda3 during installation
UUID=5edf0681-dbe7-4334-b2da-17e278304fc1 none        swap    sw                           0 0
# /bulk was on /dev/sda4 during installation
UUID=25b6d702-21a9-41db-aee9-e2d6cd75b147 /bulk       ext4    relatime,nodiratime          0 2
#
# /dev/sdb
#
# / was on /dev/sdb1 during installation
UUID=2d075636-d6f1-4828-a0b6-96c7e3cc26f2 /           ext4    relatime,nodiratime,discard  0 1
# /home was on /dev/sdb2 during installation
UUID=896753e1-318f-433d-bb31-fabce07e3abc /home       ext4    relatime,nodiratime,discard  0 2
# /spare0 was on /dev/sdb3 during installation
UUID=51ee6896-79ae-4c84-8c26-0746a2a55c5b /spare0     ext4    noatime,nodiratime,discard   0 2
#
# /dev/sdc
#
# /ccc was on /dev/sdc1 during installation
UUID=f71486dd-54af-423c-826b-297cee3bc549 /ccc        ext4    async,data=writeback,barrier=0,nouser_xattr,noacl,journal_async_commit,delalloc,max_batch_time=50000,noauto_da_alloc,dioread_nolock,noatime,nodiratime,discard   0 2
# /ssd-cache was on /dev/sdc2 during installation
UUID=4693e1df-0f61-4239-8fc5-39f8df2fe7e9 /ssd-cache  ext4    relatime,nodiratime,discard  0 2
# /spare1 was on /dev/sdc3 during installation
UUID=646e538c-e58a-4dad-be70-2886f75bcd34 /spare1     ext4    noatime,nodiratime,discard   0 2
#
# TMPFS
#
none                                      /tmp        tmpfs   noatime,nodiratime           0 0
none                                      /var/tmp    tmpfs   relatime,nodiratime          0 0
#
# Network mounts
#
//10.1.1.2/homes   /net/whs/homes  cifs   defaults,username=Dad,password=paren eFy wed jSy 0 2
EOF
