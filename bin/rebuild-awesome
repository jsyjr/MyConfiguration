#!/bin/dash

set -e

if [ ! -f "awesomeConfig.cmake" ]; then
   echo "Working directory ( $(pwd) ) is not the root of an awesome source tree."; exit 1
fi

git reset --hard
git pull
sed -i.bak \
    -e 's/-O1/-O2 -march=corei7/g' \
  awesomeConfig.cmake


set +e
sudo chmod -R o+w ./.build-*
set -e
rm -rf ./.build-*
sudo make clean
sudo make install
