#!/bin/dash

rebuild()
{
    ( echo
      echo
      echo
      echo '==============================================================================='
      echo  Rebuild: $1
      echo '==============================================================================='
      echo
      cd ~/repos/$1
      ~/bin/rebuild-$1 )
}

# rebuild awesome
# rebuild cc-mode
rebuild ctags
rebuild doxygen
rebuild emacs
rebuild global
rebuild phw
rebuild st
